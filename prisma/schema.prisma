generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String                @id @default(cuid())
  email              String                @unique
  password           String
  name               String
  phone              String?
  avatar             String?
  role               Role                  @default(CUSTOMER)
  emailVerified      DateTime?
  createdAt          DateTime              @default(now())
  updatedAt          DateTime              @updatedAt
  address            String?
  assignedLocationId String?
  bio                String?
  dateOfBirth        DateTime?
  gender             String?
  nerdCoinBalance    Int                   @default(0)
  nerdCoinTier       String                @default("BRONZE")
  isLocked           Boolean               @default(false)
  occupation         String?
  profileCompletedAt DateTime?
  region             String?
  school             String?
  visitPurpose       String[]
  accounts           Account[]
  bookings           Booking[]
  nerdCoinTxns       NerdCoinTransaction[]
  posts              Post[]
  sessions           Session[]
  assignedLocation   Location?             @relation(fields: [assignedLocationId], references: [id])

  @@index([name])
  @@index([phone])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Room {
  id          String    @id @default(cuid())
  name        String
  type        RoomType
  description String?
  capacity    Int
  amenities   String[]
  image       String?
  isActive    Boolean   @default(true)
  locationId  String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
  location    Location  @relation(fields: [locationId], references: [id])
}

model Location {
  id        String    @id @default(cuid())
  name      String
  address   String
  phone     String
  mapUrl    String?
  image     String?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
  rooms     Room[]
  staff     User[]
}

model Service {
  id             String      @id @default(cuid())
  name           String
  slug           String      @unique
  type           ServiceType
  description    String?
  priceSmall     Int?
  priceLarge     Int?
  priceFirstHour Int?
  pricePerHour   Int?
  nerdCoinReward Int         @default(0)
  minDuration    Int         @default(60)
  timeStep       Int         @default(30)
  features       String[]
  icon           String?
  isActive       Boolean     @default(true)
  sortOrder      Int         @default(0)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  image          String?
}

model Combo {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  duration    Int
  price       Int
  description String?
  features    String[]
  icon        String?
  isPopular   Boolean  @default(false)
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  image       String?
}

model Booking {
  id               String        @id @default(cuid())
  bookingCode      String        @unique
  userId           String?
  locationId       String
  date             DateTime      @db.Date
  startTime        String
  endTime          String
  guests           Int           @default(1)
  status           BookingStatus @default(PENDING)
  note             String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  actualAmount     Int?
  actualEndTime    DateTime?
  actualStartTime  DateTime?
  customerEmail    String?
  customerName     String
  customerPhone    String
  depositAmount    Int
  depositPaidAt    DateTime?
  depositStatus    DepositStatus @default(PENDING)
  estimatedAmount  Int
  nerdCoinIssued   Int           @default(0)
  nerdCoinIssuedAt DateTime?
  remainingAmount  Int?
  roomId           String
  source           BookingSource @default(WEBSITE)
  paymentStartedAt DateTime?
  isRescheduled    Boolean       @default(false)
  location         Location      @relation(fields: [locationId], references: [id])
  room             Room          @relation(fields: [roomId], references: [id])
  user             User?         @relation(fields: [userId], references: [id])
  payment          Payment?

  @@index([roomId])
  @@index([locationId])
  @@index([date])
  @@index([status])
  @@index([customerPhone])
  @@index([customerName])
  @@index([customerEmail])
}

model Payment {
  id            String        @id @default(cuid())
  bookingId     String        @unique
  amount        Int
  method        PaymentMethod
  transactionId String?
  gatewayData   Json?
  status        PaymentStatus @default(PENDING)
  paidAt        DateTime?
  refundedAt    DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  booking       Booking       @relation(fields: [bookingId], references: [id])
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id            String     @id @default(cuid())
  title         String
  slug          String     @unique
  type          PostType   @default(NEWS)
  excerpt       String?
  content       String
  thumbnail     String?
  images        String[]
  authorId      String
  status        PostStatus @default(DRAFT)
  publishedAt   DateTime?
  eventDate     DateTime?
  eventTime     String?
  eventLocation String?
  featured      Boolean    @default(false)
  viewCount     Int        @default(0)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  author        User       @relation(fields: [authorId], references: [id])

  @@index([type])
  @@index([status])
  @@index([publishedAt])
  @@index([authorId])
}

model NerdCoinTransaction {
  id          String          @id @default(cuid())
  userId      String
  amount      Int
  type        NerdCoinTxnType
  description String?
  bookingId   String?
  createdAt   DateTime        @default(now())
  user        User            @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([type])
  @@index([createdAt])
}

model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  title     String
  message   String
  link      String?
  isRead    Boolean          @default(false)
  bookingId String?
  createdAt DateTime         @default(now())

  @@index([isRead])
  @@index([createdAt])
  @@index([type])
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String
  userName   String
  action     String
  resource   String
  resourceId String?
  details    String?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([createdAt])
}

model EmailTemplate {
  id        String   @id @default(cuid())
  name      String   @unique
  subject   String
  content   String
  variables String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatConversation {
  id             String        @id @default(cuid())
  guestName      String?
  guestEmail     String?
  guestPhone     String?
  guestSessionId String?
  userId         String?
  assignedToId   String?
  status         ChatStatus    @default(OPEN)
  source         String?
  subject        String?
  lastMessageAt  DateTime?
  unreadCount    Int           @default(0)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  closedAt       DateTime?
  messages       ChatMessage[]

  @@index([status])
  @@index([assignedToId])
  @@index([userId])
  @@index([guestSessionId])
  @@index([lastMessageAt])
}

model ChatMessage {
  id             String           @id @default(cuid())
  conversationId String
  content        String
  attachments    String[]
  senderType     SenderType
  senderId       String?
  senderName     String?
  isRead         Boolean          @default(false)
  createdAt      DateTime         @default(now())
  conversation   ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdAt])
  @@index([senderType])
}

model Job {
  id           String        @id @default(cuid())
  title        String
  slug         String        @unique
  description  String
  location     String
  workShift    String
  requirements String
  benefits     String
  isActive     Boolean       @default(true)
  sortOrder    Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  applications Application[]

  @@index([isActive])
  @@index([sortOrder])
}

model Application {
  id                String            @id @default(cuid())
  jobId             String
  name              String
  phone             String
  email             String?
  preferredLocation String
  cvUrl             String?
  availability      String?
  status            ApplicationStatus @default(NEW)
  notes             String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  job               Job               @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@index([status])
  @@index([createdAt])
}

model Feedback {
  id        String         @id @default(cuid())
  userId    String?
  name      String
  email     String?
  phone     String?
  type      FeedbackType   @default(OTHER)
  subject   String?
  content   String
  images    String[]
  status    FeedbackStatus @default(PENDING)
  adminNote String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@index([status])
  @@index([type])
  @@index([createdAt])
}

enum Role {
  ADMIN
  STAFF
  CUSTOMER
  MANAGER
  CONTENT_EDITOR
}

enum RoomType {
  MEETING_LONG
  MEETING_ROUND
  POD_MONO
  POD_MULTI
}

enum ServiceType {
  MEETING
  POD_MONO
  POD_MULTI
}

enum BookingSource {
  WEBSITE
  ONSITE
  PHONE
  ZALO
}

enum DepositStatus {
  PENDING
  PAID_ONLINE
  PAID_CASH
  WAIVED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum PaymentMethod {
  CASH
  VNPAY
  MOMO
  ZALOPAY
  BANK_TRANSFER
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PostType {
  NEWS
  EVENT
  PAGE
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum NerdCoinTxnType {
  EARN
  REDEEM
  BONUS
  EXPIRED
  ADJUSTMENT
}

enum NotificationType {
  BOOKING_NEW
  BOOKING_CONFIRMED
  BOOKING_CANCELLED
  PAYMENT_RECEIVED
  CHECKIN
  CHECKOUT
  SYSTEM
}

enum ChatStatus {
  OPEN
  ASSIGNED
  RESOLVED
  CLOSED
}

enum SenderType {
  GUEST
  STAFF
  SYSTEM
}

enum ApplicationStatus {
  NEW
  REVIEWING
  INTERVIEWED
  ACCEPTED
  REJECTED
}

enum FeedbackStatus {
  PENDING
  REVIEWED
  RESOLVED
  IGNORED
}

enum FeedbackType {
  SERVICE_QUALITY
  FACILITIES
  STAFF_ATTITUDE
  SUGGESTION
  OTHER
}
